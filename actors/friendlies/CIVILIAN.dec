	+FRIENDLY
	States {
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_SpawnItemEx("StimBonus",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION)
			//TNT1 A 0 A_SpawnItemEx("CivilianSpawner",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION)
			stop
	}
}

