ACTOR Civilian : CivilianStanding 13002
{
	//$Category Federation
	+FRIENDLY
	-COUNTKILL
	+NOSPLASHALERT
	+NOBLOCKMONST
	+QUICKTORETALIATE
	-FRIGHTENED
	+DROPOFF
	+PUSHABLE
  States
  {
  Spawn:
    PEAS A 1
    goto See
  See:
    PEAS A 0 A_JumpIfInventory("Fright",1,2)
    PEAS AABBCCDD 5 A_Wander
    Loop
    PEAS AABBCCDD 2 A_Chase
    Loop
  }
}
