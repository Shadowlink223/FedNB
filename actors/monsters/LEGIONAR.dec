	ROB1 F 0 A_Jumpifcloser(512,"FireAttackTarget")
    ROB1 F 8 A_FaceTarget
    ROB1 F 0 A_PlaySound("Legionary/attack")
    //ROB1 G 0 BRIGHT A_CustomBulletAttack(11,11,3,random(1,3)*3,"BulletPuff")
