    ROB1 G 2 Bright A_CustomMissile("FKFire",28,0)               				// 1ST FIRE
    ROB1 G 2 Bright A_CustomMissile("FKFire",28,0)               				// 2ND FIRE
    ROB1 F 0 A_FaceTarget                                        				//
	TNT1 A 0 A_GiveInventory("LegionaryCounter",1)								// LEGIONARYCOUNTER++ }
	loop
	ROB1 F 0 A_TakeInventory("LegionaryCounter",16)								// /*RESET LEGIONARYCOUNTER*/
    ROB1 F 1 A_SentinelRefire                                    				// KEEP SHOOTING!
    Goto See																	//
  Pain:
    ROB1 A 2 A_TossGib
    ROB1 A 2 A_Pain
    Goto See
	Pain.KillMe:
		Goto See
  Death:
  Death.KnifeSlash:
  Death.KnifeStab:
  Death.KnifeSlashPower:
  Death.KnifeStabPower:
  Death.WakizashiSlash:
  Death.WakizashiStab:
  Death.WakizashiSlashPower:
  Death.WakizashiStabPower:
    ROB1 J 6
    ROB1 K 6 A_Scream
    ROB1 L 5
    ROB1 M 5 A_NoBlocking
    ROB1 NOP 5
    ROB1 Q 6 A_Explode(32,32,1,1)
    ROB1 R -1
    Stop
  XDeath:
    ROB1 L 5 A_TossGib
    ROB1 M 5 A_Scream
    ROB1 N 5 A_TossGib
    ROB1 O 5 A_NoBlocking
    ROB1 P 5 A_TossGib
    Stop
